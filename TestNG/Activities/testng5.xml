<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Activity5 Suite">

    <!-- Run ALL tests from this activity -->
    <test name="Run All Tests">
        <classes>
            <class name="tests.Activity5"/>
        </classes>
    </test>

    <!-- Run ONLY HeaderTests -->
    <test name="Run Header Tests Only">
        <groups>
            <run>
                <include name="HeaderTests"/>
            </run>
        </groups>
        <classes>
            <class name="tests.Activity5"/>
        </classes>
    </test>

    <!--  Run ONLY ButtonTests -->
    <test name="Run Button Tests Only">
        <groups>
            <run>
                <include name="ButtonTests"/>
            </run>
        </groups>
        <classes>
            <class name="tests.Activity5"/>
        </classes>
    </test>

    <!-- Exclude HeaderTests -->
    <test name="Exclude Header Tests">
        <groups>
            <run>
                <exclude name="HeaderTests"/>
            </run>
        </groups>
        <classes>
            <class name="tests.Activity5"/>
        </classes>
    </test>

</suite>

